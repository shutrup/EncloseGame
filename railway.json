{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build --workspace=@enclose/web && npm install -g serve"
    },
    "deploy": {
        "startCommand": "serve apps/web/dist -s -l $PORT",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}