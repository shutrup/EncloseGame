{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd apps/web && npm install && npm run build"
    },
    "deploy": {
        "startCommand": "npx serve apps/web/dist -s -l 3000",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}